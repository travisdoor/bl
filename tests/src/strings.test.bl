test_string_to_lower :: fn () #test {
    tmp := string_new();
    defer string_delete(tmp);

    string_clear(&tmp);
    string_append(&tmp, "");
    string_to_lower(tmp);
    test_eq(tmp, "");

    string_clear(&tmp);
    string_append(&tmp, "AaAaa AAa ");
    string_to_lower(tmp);
    test_eq(tmp, "aaaaa aaa ");

    string_clear(&tmp);
    string_append(&tmp, "0123456789~!@#$%^&*()_+");
    string_to_lower(tmp);
    test_eq(tmp, "0123456789~!@#$%^&*()_+");
}

