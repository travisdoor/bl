#import "std/fs"

main :: fn () s32 {
    using std;

    stream, open_err :: open_file(#file);
    defer close_file(&stream);
    if open_err { 
        print_err(open_err); 
        return 1; 
    }

    str := str_new();
    defer str_delete(&str);
    read_bytes, read_err :: read_string(&stream, &str);
    if read_err { 
        print_err(read_err);
        return 2;
    }
    print("read % bytes\n", read_bytes);
    print("%\n", str);
    return 0;
}
