test_multiline_str_literal :: fn () #test {
    FOO :: 
       "Hello "
       "this "
       "is "
       "multiline "
       "string"
       "!";
    EXPECTED :: "Hello this is multiline string!";
    print_log("'%'\n'%'\n", FOO, EXPECTED);
    test_true(std.str_is_zero_terminated(FOO));
    test_eq(FOO.len, EXPECTED.len);
    test_eq(FOO, EXPECTED);
}

